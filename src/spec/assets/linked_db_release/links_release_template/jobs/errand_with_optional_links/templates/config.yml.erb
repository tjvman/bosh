---
databases:
  main:
<% link('db').instances.each do |instance| %>
  - id: <%= instance.id %>
    name: <%= instance.name %>
    index: <%= instance.index %>
    address: <%= instance.address %>
<% end %>
  backup:
<% if_link('provider') do |link|
  link.instances.each do |instance| %>
  - name: <%= instance.name %>
    az: <%= instance.az %>
    index: <%= instance.index %>
    address: <%= instance.address %>
<% end
   end %>
